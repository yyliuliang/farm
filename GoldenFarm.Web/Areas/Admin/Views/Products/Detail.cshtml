
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model Product

<div class="uc-head">产品详情</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(n => n.Id)
    <div class="uc-form">       
        
        <div class="form-group">
            <div class="form-group-addon no-right-border">名称</div>
            <div class="form-group-input stretch">
                @Html.TextBoxFor(n => n.ProductName, new { @class = "stretch" })
            </div>
        </div>

        <div class="form-group">
            <div class="form-group-addon no-right-border">编号</div>
            <div class="form-group-input stretch">
                @Html.TextBoxFor(n => n.ProductCode, new { @class = "stretch" })
            </div>
        </div>

       

        <div class="form-group">
            <div class="form-group-addon no-right-border">描述</div>
            <div class="form-group-input stretch">
                @Html.TextBoxFor(n => n.Description, new { @class = "stretch" })
            </div>
        </div>

        <div class="form-group">
            <input type="button" class="button button-color-1 button-stretch" value="保存" onclick="return PreSubmit()">
        </div>
    </div>
}

<script type="text/javascript">
    

    function PreSubmit()
    {
        $('form').submit();
    }
</script>