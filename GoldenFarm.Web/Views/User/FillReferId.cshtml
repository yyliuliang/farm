
@{
    ViewBag.Title = "用户中心";
    Layout = "~/Views/Shared/_UserCenterLayout.cshtml";
    bool filed = Model.RefUserId > 0;
}
@model GoldenFarm.Entity.User

@using (Html.BeginForm())
{
    <div class="uc-head uc-head-border">补填推广码</div>

    <div class="message message-info">
        温馨提示：<br>
        请仔细核对您的推广码或推荐人的手机号码，一但确定将不能修改！
    </div>
    <div class="uc-form">

        <div class="form-group">
            <div class="form-group-addon no-right-border">推广码/手机号</div>
            <div class="form-group-input stretch">
                <input class="stretch" data-val="true" data-val-regex="请输入正确的推广码" data-val-regex-pattern="\d{5,}" data-val-required="请输入推广码" id="ReferId" name="referId" placeholder="请填写推广码或手机号" type="text" value="">
            </div>
        </div>
        <span class="field-validation-valid" data-valmsg-for="ReferId" data-valmsg-replace="true"></span>
        <div class="form-group">
            <input type="submit" class="button button-color-1 button-stretch" value="提交">
        </div>
        <span class="field-validation-valid" data-valmsg-for="Err" data-valmsg-replace="true"></span>
        <script type="text/javascript">
            $(function () {
                $("#referId").val('');
            });
        </script>
    </div>
}
